extends ../../layouts/default

block content
  .container-fluid.container-max
    .page-header
      h1 Home 
        small /views/dashboard/index
    //include ../partials/flash.jade
    if user.stripe.plan == 'free'
      .panel.panel-default
        .panel-heading Free Plan
        .panel-body
          p Thanks for subscribing to the free plan! Enjoy this free content!
    else
      .panel.panel-default
        .panel-heading
          | Free Plan (
          a(href='/billing') Change to this plan
          | )
    if user.stripe.plan == 'silver'
      .panel.panel-default
        .panel-heading Silver Plan
        .panel-body
          p Thanks for subscribing to the silver plan!
    else
      .panel.panel-default
        .panel-heading
          | Silver Plan (
          a(href='/billing') Change to this plan
          | )
    if user.stripe.plan == 'gold'
      .panel.panel-default
        .panel-heading Gold Plan
        .panel-body
          p Thanks for subscribing to the gold plan!
    else
      .panel.panel-default
        .panel-heading
          | Gold Plan (
          a(href='/billing') Change to this plan
          | )
    if user.stripe.plan == 'platinum'
      .panel.panel-default
        .panel-heading Platinum Plan
        .panel-body
          p Thanks for subscribing to the platinum plan!
    else
      .panel.panel-default
        .panel-heading
          | Platinum Plan (
          a(href='/billing') Change to this plan
          | )
    .well
      p Debug Info:
      ul
        li Does this user have a plan?
        if _.has(plans, user.stripe.plan)
          | YES
        else
          | NOPE
        li Does this user have paid plan? 
        if _.contains(['silver','gold','platinum'], user.stripe.plan)
          | YES
        else
          | NOPE
