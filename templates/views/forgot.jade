extends layouts/application.jade

block content
  .container(style='max-width: 400px;')
    form(method='POST', action='/forgot')
      h2 Forgot Password
      p
        input.form-control(type='text', name='email', placeholder='Email address', value='#{form.email}', autofocus='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Reset Password
